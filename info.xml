<?xml version="1.0"?>
<extension key="smarty-user-content-policy" type="module">
  <file>smarty_user_content_policy</file>
  <name>smarty-user-content-policy</name>
  <description>Provides a custom user content policy for Smarty in CiviCRM.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>SYSTOPIA GmbH</author>
    <email>info@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">http://github.com/systopia/smarty-user-content-policy</url>
    <url desc="Documentation">http://github.com/systopia/smarty-user-content-policy</url>
    <url desc="Support">http://github.com/systopia/smarty-user-content-policy/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2024-06-24</releaseDate>
  <version>1.0-alpha1</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>5.74</ver>
  </compatibility>
  <comments>This extension does not need to be installed on CiviCRM versions prior to 5.74.4 or 5.69.6, see the release
    announcement (https://civicrm.org/blog/dev-team/civicrm-5744-5696-esr-security-release) and the corresponding CVE
    identifier (https://civicrm.org/advisory/civi-sa-2024-03-smarty-security-policy) for details on the issue.
  </comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/SmartyUserContentPolicy</namespace>
    <format>23.02.1</format>
    <angularModule>crmSmartyUserContentPolicy</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
</extension>
